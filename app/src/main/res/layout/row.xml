<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageViewHoliday"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/textViewTitle"
        android:layout_alignTop="@+id/imageViewHoliday"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewHoliday"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textViewDate"
        android:layout_below="@+id/textViewPlace"
        android:layout_alignEnd="@+id/textViewPlace"
        android:layout_toEndOf="@+id/imageViewHoliday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place"
        android:id="@+id/textViewPlace"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle"
        android:layout_toEndOf="@+id/imageViewHoliday" />
</RelativeLayout>